OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4o-mini
# Optional: comma-separated backup models if primary model is unavailable
# OPENAI_FALLBACK_MODELS=gpt-4.1-mini,gpt-4o-mini
CORS_ALLOW_ORIGINS=https://hirescore.in,https://www.hirescore.in,http://localhost:3000
# Optional: enable all Vercel preview URLs for testing
# CORS_ALLOW_ORIGIN_REGEX=https://.*\.vercel\.app
AUTH_TOKEN_SECRET=replace-with-a-long-random-secret
# Recommended for persistent users in cloud deploys (Render/railway/etc):
# DATABASE_URL=postgresql://user:password@host:5432/dbname
# Optional: token validity window in hours (default 720 = 30 days)
# AUTH_TOKEN_TTL_HOURS=720
# Optional: admin key(s) for /admin endpoints (comma-separated)
# ADMIN_API_KEYS=change-this-admin-key
# Optional: admin login for /admin/auth/login
# ADMIN_LOGIN_ID=admin@hirescore.in
# ADMIN_PASSWORD=change-this-admin-password
# ADMIN_AUTH_SECRET=change-this-admin-auth-secret
# ADMIN_TOKEN_TTL_HOURS=72
# Optional: path for auth sqlite db
# AUTH_DB_PATH=/var/data/hirescore_auth.db
# Optional testing helper only: manual topup endpoint (/auth/topup)
# ALLOW_UNVERIFIED_TOPUP=true
# Optional: Stripe payments
# STRIPE_SECRET_KEY=sk_live_or_test
# STRIPE_WEBHOOK_SECRET=whsec_...
# PAYMENT_SUCCESS_URL=https://hirescore.in/pricing?payment=success
# PAYMENT_CANCEL_URL=https://hirescore.in/pricing?payment=cancelled
# Optional: Razorpay payments (recommended for India)
# PAYMENT_GATEWAY=auto
# RAZORPAY_KEY_ID=rzp_live_xxxxx
# RAZORPAY_KEY_SECRET=xxxxxxxx
# Email OTP + welcome email
# EMAIL_OTP_REQUIRED=true
# OTP_SIGNING_SECRET=replace-with-random-secret
# OTP_EXPIRY_MINUTES=10
# OTP_RESEND_COOLDOWN_SECONDS=45
# OTP_MAX_ATTEMPTS=6
# Google SSO
# GOOGLE_CLIENT_ID=your-google-oauth-client-id.apps.googleusercontent.com
# Optional: comma-separated list if multiple frontend origins use different client IDs
# GOOGLE_CLIENT_IDS=client_id_one,client_id_two
# GOOGLE_TOKENINFO_TIMEOUT_SECONDS=8
# EMAIL_SMTP_HOST=smtp.gmail.com
# EMAIL_SMTP_PORT=587
# EMAIL_SMTP_USE_TLS=true
# EMAIL_SMTP_USE_SSL=false
# EMAIL_SMTP_TIMEOUT_SECONDS=12
# EMAIL_SMTP_USERNAME=you@example.com
# EMAIL_SMTP_PASSWORD=app-password-or-smtp-password
# EMAIL_SMTP_FROM=no-reply@hirescore.in
# EMAIL_SMTP_FROM_NAME=HireScore
# EMAIL_PROVIDER=auto
# RESEND_API_KEY=re_...
# RESEND_FROM=no-reply@hirescore.in
# EMAIL_HTTP_TIMEOUT_SECONDS=12
